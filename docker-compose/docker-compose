---
version: '3'
services:
    build_war:
        build:
            context: ./docker
            dockerfile: WarBuild.Dockerfile
        volumes:
            - app:/tmp

    mysql_srv:
        image: mysql:5.6.51

    dep_war: 
        image: tomcat:alpine
        ports:
            - '8080:8080'
        volumes:
            - app:/usr/local/tomcat/webapps
        depends_on: 
            - build_war

volumes:
    app: